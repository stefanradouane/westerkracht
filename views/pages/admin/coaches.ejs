<!DOCTYPE html>
<html lang="nl">

<head>
    <%- include('../../partials/head'); %>
</head>

<body class="index">
    <%- include('../../partials/header-admin'); %>
    <main class="admin">
        <h1>Welkom Bij de westerkracht coaches</h1>
        <section style="display: grid; grid-template-columns: 1fr; gap:10px;">
            <% coaches.forEach(function(coach, index){ %>
                <section>
                    <form method="POST" style="display: flex; flex-direction: column; max-width: 50%; gap:20px;  border: 10px solid grey; padding:20px;">
                        <div style="display: flex; flex-direction: column;">
                            <label for="name">Coach naam</label>
                            <input type="text" name="name" value="<%= coach.name %>">
                        </div>
                        <div style="display: flex; flex-direction: column;">
                            <label for="ig">Coach instagram <em style="color:grey;">Geen @</em></label>
                            <input type="text" name="ig" value="<%= coach.ig[0] %>">
                            <input type="text" name="ig" value="<%= coach.ig[1] %>">
                        </div>
                        <div style="display: flex; flex-direction: column;">
                            <label for="name">Coach content</label>
                            <textarea name="content" cols="30" rows="10"><%= coach.content %></textarea>
                        </div>
                        <input type="hidden" name="id" value="<%= coach._id %>">
                        
                        <button>Verander gegevens</button>
                    </form>
                </section>
                <% }) %>
            </section>
    </main>
    <aside class="admin-sidebar">
        <ul class="admin-sidebar__list">
            <li class="admin-sidebar__list-item">
                <a href="/admin" class="admin-sidebar__anchor">Terug naar admin</a>
            </li>
        </ul>
    </aside>

    <%- include('../../partials/footer'); %>
    <script type="module" src="./dist/scripts/all.js"></script>
    <!-- <script src='https://stefanradouane.github.io/vidplayer/index.js'></script> -->
</body>

</html>